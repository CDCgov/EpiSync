# version of the episync that is used
episyncVersion: 0.1

# The topic of the feed and dictionary.
topicId: {{ topicId }}

# The reporter of the feed and dictionary.
reporterId: {{ reporterId }}

# The date that this data dictionary was used in this feed
validFrom: {{ validFrom }}

# The imported dictionaries used in this data dictionary. Since data dictionaries are meant to be composable,
# unique data elements need a unique name.
#
imports:
{{#each imports }}
- name: {{this.name}}
  {{#if this.description }}
  description: {{this.description}}
  {{/if}}
  {{#if this.sourceUri }}
  sourceUri: {{ this.sourceUri }}
  {{/if}}
{{/each}}

# Elements of the dictionary
#
# Each element has:
# - name
# - follows: (optional) If present follow the URL
# - displayName (optional)
# - description (optional)
# - isMultiValued (optional)
# - type: (optional) either 'string', 'date', 'number', or 'code'
# - codeSet (optional)
# - valueSet (optional)
# - validation (optional)
#
elements:
{{#each elements}}
- name: {{ this.name }}
  type: {{ this.type }}
  {{#if this.isRepeated}}
  isRepeated: {{this.isRepeated}}
  {{/if}}
  {{#if this.codeSet}}
  codeSet: {{this.codeSet}}
  {{/if}}
  {{#if this.validation}}
  validation: {{this.validation}}
  {{/if}}
  tags:
  {{#each this.tags }}
  - {{ this }}
  {{/each}}
  descriptions:
  {{#each this.descriptions }}
  - isoCultureCode: {{ this.isoCultureCode }}
    displayName: {{ this.displayName }}
    {{#if this.section }}
    section: {{ this.section }}
    {{/if}}
    {{#if this.details }}
    details: {{ this.details }}
    {{/if}}
    {{#if this.authorComments }}
    authorComments: {{ this.authorComments }}
    {{/if}}
  {{/each}}
{{/each}}
