{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "."
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./build"
  }
}