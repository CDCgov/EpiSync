{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": [
    "."
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./src/server/types",
    ],
    "sourceMap": true,
    "noEmit": false,
    "outDir": "build"
  }
}
